# Database
DATABASE_URL="postgresql://parel:parel@localhost:5432/parel"

# Redis
REDIS_URL="redis://localhost:6379"

# NextAuth
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# Email (for transactional emails)
# Option 1: Resend (recommended)
RESEND_API_KEY="re_your_resend_api_key_here"
APP_MAIL_FROM="noreply@yourdomain.com"

# Option 2: SMTP (alternative)
# EMAIL_SERVER_HOST="smtp.gmail.com"
# EMAIL_SERVER_PORT=587
# EMAIL_SERVER_USER="your-email@gmail.com"
# EMAIL_SERVER_PASSWORD="your-app-password"

# Newsletter providers (choose one or both)
MAILERLITE_API_KEY="ml_your_mailerlite_api_key_here"
# CONVERTKIT_API_KEY="ck_your_convertkit_api_key_here"

# Security & Rate Limiting
# Option 1: Upstash Redis (recommended for production)
UPSTASH_REDIS_REST_URL="https://your-redis-instance.upstash.io"
UPSTASH_REDIS_REST_TOKEN="your_redis_token_here"

# Option 2: hCaptcha for bot protection
HCAPTCHA_SECRET="0x_your_hcaptcha_secret_key_here"
NEXT_PUBLIC_HCAPTCHA_SITE_KEY="your_hcaptcha_site_key_here"

# Security & Authentication
# Allow demo/dev login without captcha (set to "true" for development)
NEXT_PUBLIC_ALLOW_DEMO_LOGIN="true"

# Development Features
# Unlock all level-gated features for admin testing (set to "true" for development)
NEXT_PUBLIC_DEV_UNLOCK="false"

# Environment
# Set to "beta" for public beta, "staging" for internal testing, "production" for production
NEXT_PUBLIC_ENV="development"

# Analytics & Telemetry
# Enable analytics and error tracking (set to "1" to enable)
ENABLE_ANALYTICS="0"

# Admin configuration
ADMIN_EMAILS="admin@yourdomain.com,admin2@yourdomain.com"

# Observability & Error Tracking
# Sentry configuration
SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
NEXT_PUBLIC_SENTRY_DSN="https://your-sentry-dsn@sentry.io/project-id"
SENTRY_ORG="your-sentry-org"
SENTRY_PROJECT="your-project-name"

# Error logging configuration
# Enable verbose error logging (shows all errors in console, even in production)
# Set to "true" for debugging production issues
NEXT_PUBLIC_VERBOSE_ERRORS="false"

# Git SHA for version tracking (automatically set by CI/CD)
GIT_SHA="abc1234"

# Database Performance & Scaling
# PostgreSQL connection settings optimized for pgbouncer
DATABASE_URL="postgresql://user:password@localhost:5432/parel_mvp?connection_limit=10&pool_timeout=10&connect_timeout=10"

# OAuth Providers
# Google OAuth (Active)
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
NEXT_PUBLIC_GOOGLE_ENABLED="true"

# Email Provider (Active)
NEXT_PUBLIC_EMAIL_ENABLED="true"

# Facebook OAuth (Placeholder - not yet configured)
FACEBOOK_CLIENT_ID="placeholder"
FACEBOOK_CLIENT_SECRET="placeholder"
NEXT_PUBLIC_FACEBOOK_ENABLED="false"

# Twitter/X OAuth (Placeholder - not yet configured)
TWITTER_CLIENT_ID="placeholder"
TWITTER_CLIENT_SECRET="placeholder"
NEXT_PUBLIC_TWITTER_ENABLED="false"

# Reddit OAuth (Placeholder - not yet configured)
REDDIT_CLIENT_ID="placeholder"
REDDIT_CLIENT_SECRET="placeholder"
NEXT_PUBLIC_REDDIT_ENABLED="false"

# Question generation limits (legacy - replaced by new generator config)
QGEN_BATCH_SIZE=50  # Number of leaves per batch job by default
QGEN_DAILY_LIMIT=200  # Maximum jobs enqueued per day
# Scheduler interval (e.g., 15m for 15 minutes)
SCHEDULER_INTERVAL=15m

# Question Generator Configuration (New System v0.5.4)
# Maximum concurrent GPT API calls (keep low to avoid rate limits)
NEXT_PUBLIC_GEN_MAX_CONCURRENCY=2
# Number of questions to generate per category (min-max range)
NEXT_PUBLIC_Q_PER_CAT_MIN=5
NEXT_PUBLIC_Q_PER_CAT_MAX=12
# Languages to generate (comma-separated ISO codes)
NEXT_PUBLIC_GEN_LANGS=en
# GPT API endpoint for question generation
GPT_GEN_URL=https://api.openai.com/v1/chat/completions
# GPT API key (or other AI provider)
GPT_GEN_KEY=sk_your_openai_api_key_here
# Admin token for triggering generation (random string)
ADMIN_TOKEN=your_random_admin_token_here
# Dry run mode (set to "true" to test without saving questions)
NEXT_PUBLIC_GEN_DRY_RUN=false
# Batch size for processing
NEXT_PUBLIC_GEN_BATCH_SIZE=50
# Max retries for failed generations
NEXT_PUBLIC_GEN_MAX_RETRIES=3
# Delay between retries (milliseconds)
NEXT_PUBLIC_GEN_RETRY_DELAY=1000

# Shop & Stripe configuration
NEXT_PUBLIC_APP_URL="http://localhost:3000"
STRIPE_SECRET_KEY="sk_test_your_secret_key_here"
STRIPE_WEBHOOK_SECRET="whsec_your_webhook_secret_here"
SHOP_CURRENCY="EUR"
FUNDS_TO_DIAMONDS_RATE=0.1
DIAMONDS_TO_FUNDS_RATE=10
DEFAULT_TENANT_ID="test-tenant"





