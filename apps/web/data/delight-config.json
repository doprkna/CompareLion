    "buttonPress": {
      "type": "scale",
      "from": 1,
      "to": 0.95,
      "duration": 100,
      "spring": {
        "stiffness": 400,
        "damping": 17
      }
    },
    "buttonBounce": {
      "type": "bounce",
      "scale": [1, 0.9, 1.1, 1],
      "y": [0, 2, -2, 0],
      "duration": 400
    },
    "xpBarShimmer": {
      "type": "shimmer",
      "duration": 3000,
      "repeat": "infinite",
      "gradient": "linear-gradient(90deg, transparent, rgba(255,255,255,0.3), transparent)"
    },
    "avatarGlow": {
      "type": "glow",
      "duration": 2000,
      "repeat": "infinite",
      "boxShadow": [
        "0 0 10px var(--glow-color)",
        "0 0 30px var(--glow-color)",
        "0 0 10px var(--glow-color)"
      ]
    },
    "prestigeGain": {
      "type": "pulse",
      "duration": 1500,
      "opacity": [0, 1, 0],
      "scale": [0.8, 1.2, 0.8]
    },
    "cardHover": {
      "type": "lift",
      "y": -4,
      "boxShadow": "0 8px 24px rgba(0,0,0,0.2)",
      "spring": {
        "stiffness": 400,
        "damping": 17
      }
    },
    "confetti": {
      "type": "burst",
      "particleCount": 50,
      "spread": 70,
      "origin": {
        "y": 0.6
      }
    }
  },
  "visualEffects": {
    "xpBarShimmer": {
      "enabled": true,
