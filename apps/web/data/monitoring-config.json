    "rules": [
      {
        "id": "high_error_rate",
        "condition": "error_rate > 10",
        "severity": "warning",
        "message": "Error rate exceeds 10%"
      },
      {
        "id": "critical_error_rate",
        "condition": "error_rate > 20",
        "severity": "critical",
        "message": "Critical: Error rate exceeds 20%"
      },
      {
        "id": "slow_api",
        "condition": "api_latency > 2000",
        "severity": "warning",
        "message": "API response time exceeds 2 seconds"
      },
      {
        "id": "database_down",
        "condition": "database.status === 'unhealthy'",
        "severity": "critical",
        "message": "Database connection failed"
      },
      {
        "id": "queue_stalled",
        "condition": "jobs.stalledCount > 100",
        "severity": "error",
        "message": "High number of stalled jobs"
      }
    ]
