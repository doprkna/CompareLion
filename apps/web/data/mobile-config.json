{
  "version": "0.9.0",
  "layout": {
    "breakpoints": {
      "mobile": 640,
      "tablet": 768,
      "desktop": 1024
    },
    "navigation": {
      "type": "bottom_bar",
      "height": 64,
      "items": [
        {
          "id": "home",
          "icon": "üè†",
          "label": "Home",
          "path": "/main",
          "badge": false
        },
        {
          "id": "play",
          "icon": "üåä",
          "label": "Play",
          "path": "/flow",
          "badge": false
        },
        {
          "id": "social",
          "icon": "üí¨",
          "label": "Social",
          "path": "/friends",
          "badge": true,
          "badgeKey": "unread_messages"
        },
        {
          "id": "profile",
          "icon": "üë§",
          "label": "Profile",
          "path": "/profile",
          "badge": false
        }
      ]
    }
  },
  "gestures": {
    "swipeNavigation": {
      "enabled": true,
      "threshold": 50,
      "velocity": 0.3,
      "directions": {
        "left": "next_page",
        "right": "previous_page"
      }
    },
    "pullToRefresh": {
      "enabled": true,
      "threshold": 80,
      "maxDistance": 120,
      "pages": [
        "/main",
        "/feed",
        "/friends",
        "/leaderboard"
      ]
    },
    "longPress": {
      "enabled": true,
      "duration": 500,
      "actions": {
        "profile_avatar": "quick_actions_menu",
        "feed_item": "reaction_picker",
        "message": "context_menu"
      }
    }
  },
  "components": {
    "cards": {
      "padding": 16,
      "borderRadius": 12,
      "shadow": "0 2px 8px rgba(0,0,0,0.1)"
    },
    "buttons": {
      "minHeight": 44,
      "fontSize": 16,
      "padding": "12px 24px"
    },
    "inputs": {
      "minHeight": 44,
      "fontSize": 16,
      "padding": 12
    },
    "lists": {
      "itemHeight": 64,
      "spacing": 8
    }
  },
  "touchTargets": {
    "minimum": 44,
    "recommended": 48,
    "spacing": 8
  },
  "hapticFeedback": {
    "enabled": true,
    "events": {
      "tap": "light",
      "success": "medium",
      "error": "heavy",
      "level_up": "heavy",
      "achievement": "medium"
    }
  },
  "animations": {
    "pageTransitions": {
      "enabled": true,
      "duration": 300,
      "easing": "ease-in-out"
    },
    "listAnimations": {
      "enabled": true,
      "stagger": 50
    },
    "reducedMotion": {
      "respectPreference": true,
      "fallback": "fade"
    }
  },
  "optimization": {
    "virtualScrolling": {
      "enabled": true,
      "bufferSize": 10,
      "pages": [
        "/feed",
        "/leaderboard",
        "/friends"
      ]
    },
    "imageOptimization": {
      "lazy": true,
      "placeholder": "blur",
      "quality": 80
    },
    "codesplitting": {
      "enabled": true,
      "chunkSize": 200000
    }
  }
}











