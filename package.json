{
  "name": "parel-mvp",
  "version": "1.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "dev": "concurrently \"npm run dev:web\" \"npm run dev:worker\"",
    "dev:web": "cd apps/web && npm run dev",
    "dev:worker": "cd apps/worker && npm run dev",
    "build": "npm run build:web",
    "build:web": "cd apps/web && npm run build",
    "db:push": "cd packages/db && npx prisma db push",
    "db:migrate": "cd packages/db && npm run prisma:migrate",
    "db:seed": "cd packages/db && npm run prisma:seed",
    "db:studio": "cd packages/db && npx prisma studio",
    "lint": "npm run lint:web && npm run lint:worker",
    "lint:web": "cd apps/web && npm run lint",
    "lint:worker": "cd apps/worker && npm run lint",
    "test": "npm run test:web",
    "test:web": "cd apps/web && npm run test",
    "prepare": "husky install"
  },
  "devDependencies": {
    "concurrently": "^8.2.2",
    "husky": "^8.0.3",
    "lint-staged": "^15.2.0",
    "ts-node": "^10.9.2",
    "typescript": "^5.9.2"
  }
}
