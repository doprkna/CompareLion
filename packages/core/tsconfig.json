{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "rootDir": ".",
    "outDir": "dist",
    "paths": {
      "@parel/*": ["packages/*/src"],
      "@parel/core/utils/*": ["packages/core/utils/*"],
      "@parel/core/config": ["packages/core/config"],
      "@parel/types": ["../types/dist"],
      "@parel/shared": ["packages/shared"],
      "@parel/utils": ["packages/utils"],
      "@shared/*": ["packages/shared/*"],
      "@utils/*": ["packages/utils/*"],
      "@parel/api": ["packages/core/stubs/parel-api"]
    }
  },
  "include": ["src/**/*.ts", "src/**/*.tsx", "utils/**/*.ts", "config/**/*.ts", "hooks/**/*.ts", "hooks/**/*.tsx", "state/**/*.ts", "stubs/**/*.ts"],
  "references": [{ "path": "../types" }]
}

