// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider      = "prisma-client-js"
  binaryTargets = ["native", "windows"]
  engineType    = "library"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id             String   @id @default(cuid())
  email          String   @unique
  passwordHash  String? // made optional for OAuth
  name      String?
  phone     String?
  language  String?
  country   String?
  dateOfBirth DateTime?
  avatarUrl String?
  motto     String?
  theme     String? @default("light")
  funds     Decimal  @default(0)
  diamonds  Int      @default(0)
  xp        Int      @default(0)
  level     Int      @default(1)
  lastLoginAt DateTime?
  lastActiveAt DateTime?
  createdAt DateTime @default(now())
  image     String?   // optional profile image URL
  streakCount    Int      @default(0)
  lastAnsweredAt DateTime?
  emailVerifiedAt DateTime?

  memberships Membership[]
  createdTasks Task[] @relation("TaskCreator")
  userQuestions UserQuestion[]
  // Stats for leaderboard
  score             Int     @default(0)
  questionsAnswered Int     @default(0)
  questionsCreated  Int     @default(0)

  // relation to groups
  userGroups        UserGroup[]
  // Shop entitlements
  entitlements      Entitlement[]
  purchases         Purchase[]
  subscriptions     Subscription[]
  wallet            Wallet?
  userProfile       UserProfile?
  userBadges        UserBadge[]
  passwordResets    PasswordReset[]
  emailVerifies     EmailVerify[]
  newsletterOptIn   Boolean @default(false)
  auditLogs         AuditLog[]

  @@index([emailVerifiedAt])
  @@map("users")
}

model Org {
  id        String   @id @default(cuid())
  name      String
  createdAt DateTime @default(now())

  memberships Membership[]
  tasks       Task[]
  workflows   Workflow[]
  integrations Integration[]

  @@map("orgs")
}

model Membership {
  id     String @id @default(cuid())
  userId String
  orgId  String
  role   String @default("MEMBER") // OWNER, ADMIN, MEMBER

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  org  Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@unique([userId, orgId])
  @@map("memberships")
}

model Task {
  id           String    @id @default(cuid())
  orgId        String
  createdById  String
  title        String
  description  String?
  status       TaskStatus @default(NEW)
  priority     String    @default("MEDIUM") // LOW, MEDIUM, HIGH, URGENT
  source       TaskSource @default(WEB)
  assigneeType AssigneeType @default(AUTO)
  assigneeId   String?
  dueAt        DateTime?
  createdAt    DateTime  @default(now())
  updatedAt    DateTime  @updatedAt

  org       Org          @relation(fields: [orgId], references: [id], onDelete: Cascade)
  creator   User         @relation("TaskCreator", fields: [createdById], references: [id])
  attachments Attachment[]
  messages  Message[]
  runs      Run[]

  @@map("tasks")
}

model Attachment {
  id       String @id @default(cuid())
  taskId   String
  name     String
  url      String
  mimeType String
  size     Int

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@map("attachments")
}

model Message {
  id         String      @id @default(cuid())
  taskId     String
  authorType AuthorType
  text       String
  createdAt  DateTime    @default(now())

  task Task @relation(fields: [taskId], references: [id], onDelete: Cascade)

  @@map("messages")
}

model Workflow {
  id       String        @id @default(cuid())
  orgId    String
  name     String
  trigger  WorkflowTrigger
  action   WorkflowAction
  keywords String[] // JSON array of keywords
  isActive Boolean       @default(true)
  createdAt DateTime     @default(now())
  updatedAt DateTime     @updatedAt

  org  Org  @relation(fields: [orgId], references: [id], onDelete: Cascade)
  runs Run[]

  @@map("workflows")
}

model Run {
  id         String   @id @default(cuid())
  taskId     String
  workflowId String?
  status     RunStatus @default(QUEUED)
  logs       Json?
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  task     Task      @relation(fields: [taskId], references: [id], onDelete: Cascade)
  workflow Workflow? @relation(fields: [workflowId], references: [id])

  @@map("runs")
}

model Integration {
  id       String           @id @default(cuid())
  orgId    String
  type     IntegrationType
  config   Json
  isActive Boolean          @default(true)
  createdAt DateTime        @default(now())
  updatedAt DateTime        @updatedAt

  org Org @relation(fields: [orgId], references: [id], onDelete: Cascade)

  @@map("integrations")
}

model Question {
  // Core fields for QA questions
  text            String
  normalizedText  String?          @db.Text
  difficulty      String?          // "easy" | "medium" | "hard"
  source          QuestionSource  @default(ai)
  approved        Boolean         @default(false)
  reviewNotes     String?
  createdByUserId String?
  createdAt       DateTime        @default(now())
  updatedAt       DateTime        @updatedAt

  // Existing relational fields
  id                String              @id @default(cuid())
  categoryId        String
  subCategoryId     String?
  subSubCategoryId  String?
  relatedToId       String?
  metadata          Json?   // optional metadata JSON
  currentVersionId  String?  @unique
  currentVersion    QuestionVersion?    @relation("CurrentVersion", fields: [currentVersionId], references: [id])
  versions          QuestionVersion[]   @relation("AllVersions")

  relatedTo         Question?           @relation("RelatedTo", fields: [relatedToId], references: [id])
  relatedQuestions  Question[]          @relation("RelatedTo")
  ssscId            String
  sssc              SssCategory         @relation("SsscQuestions", fields: [ssscId], references: [id])
  userQuestions     UserQuestion[]

  @@index([ssscId, approved])
  @@map("questions")
}

model QuestionVersion {
  id          String    @id @default(cuid())
  questionId  String
  text        String
  displayText String
  type        String
  options     Json?
  metadata    Json?
  createdAt   DateTime  @default(now())
  version     Int

  question    Question  @relation("AllVersions", fields: [questionId], references: [id])
  tags        QuestionVersionTag[]
  currentOf   Question? @relation("CurrentVersion")
  flowSteps   FlowStep[]
  answers     Answer[]

  @@unique([questionId, version])
  @@map("question_versions")
}

model QuestionTag {
  id    String  @id @default(cuid())
  name  String  @unique

  versions QuestionVersionTag[]

  @@map("question_tags")
}

model QuestionVersionTag {
  id                String           @id @default(cuid())
  questionVersionId String
  tagId             String

  questionVersion   QuestionVersion  @relation(fields: [questionVersionId], references: [id])
  tag               QuestionTag      @relation(fields: [tagId], references: [id])

  @@unique([questionVersionId, tagId])
  @@map("question_version_tags")
}

model Flow {
  id          String      @id @default(cuid())
  name        String
  description String?
  createdAt   DateTime    @default(now())
  metadata    Json?

  steps       FlowStep[]
  progresses  FlowProgress[]

  @@map("flows")
}

model FlowStep {
  id                String   @id @default(cuid())
  flowId            String
  questionVersionId String
  order             Int
  section           String?
  branchCondition   Json?
  randomGroup       String?
  isOptional        Boolean  @default(false)
  metadata          Json?

  flow              Flow     @relation(fields: [flowId], references: [id])
  questionVersion   QuestionVersion @relation(fields: [questionVersionId], references: [id])
  fromLinks         FlowStepLink[] @relation("FromStep")
  toLinks           FlowStepLink[] @relation("ToStep")
  progresses        FlowProgress[]
  answers           Answer[]

  @@map("flow_steps")
}

model FlowStepLink {
  id          String   @id @default(cuid())
  fromStepId  String
  toStepId    String
  condition   Json?

  fromStep    FlowStep @relation("FromStep", fields: [fromStepId], references: [id])
  toStep      FlowStep @relation("ToStep", fields: [toStepId], references: [id])

  @@map("flow_step_links")
}

model FlowProgress {
  id            String   @id @default(cuid())
  userId        String
  flowId        String
  currentStepId String?
  startedAt     DateTime @default(now())
  updatedAt     DateTime @updatedAt
  completedAt   DateTime?

  flow          Flow     @relation(fields: [flowId], references: [id])
  currentStep   FlowStep? @relation(fields: [currentStepId], references: [id])
  answers       Answer[]

  @@map("flow_progress")
}

model Answer {
  id                String   @id @default(cuid())
  sessionId         String
  stepId            String
  questionVersionId String
  value             String
  createdAt         DateTime @default(now())

  session           FlowProgress   @relation(fields: [sessionId], references: [id])
  step              FlowStep       @relation(fields: [stepId], references: [id])
  questionVersion   QuestionVersion @relation(fields: [questionVersionId], references: [id])

  @@map("answers")
}

model Language {
  id    String  @id @default(cuid())
  code  String  @unique
  name  String
  @@map("languages")
}

enum TaskStatus {
  NEW
  ROUTED
  IN_PROGRESS
  DONE
  BLOCKED
}

enum TaskSource {
  WEB
  EMAIL
  API
}

enum AssigneeType {
  AUTO
  VA
}

enum AuthorType {
  USER
  VA
  SYSTEM
}

enum WorkflowTrigger {
  KEYWORD
  FORM
  API
}

enum WorkflowAction {
  GOOGLE_SEARCH
  WEB_SCRAPE
  DOC_SUMMARY
  CUSTOM
}

enum RunStatus {
  QUEUED
  RUNNING
  SUCCEEDED
  FAILED
}

enum IntegrationType {
  GMAIL
  SLACK
  WEBHOOK
}

model Version {
  id        String   @id @default(cuid())
  name      String   // version name
  value     String
  createdAt DateTime @default(now())

  @@map("versions")
}

// Models for hierarchical categories
model Category {
  id            String         @id @default(cuid())
  name          String
  subCategories SubCategory[]
}

model SubCategory {
  id          String         @id @default(cuid())
  name        String
  categoryId  String
  category    Category       @relation(fields: [categoryId], references: [id])
  subSubs     SubSubCategory[]
}

model SubSubCategory {
  id            String         @id @default(cuid())
  name          String
  subCategoryId String
  subCategory   SubCategory    @relation(fields: [subCategoryId], references: [id])
  sssCategories SssCategory[]
}

model SssCategory {
  id               String   @id @default(cuid())
  name             String
  subSubCategoryId String
  subSubCategory   SubSubCategory @relation(fields: [subSubCategoryId], references: [id])

  // Generation status for AI seeding
  status      String   @default("pending") // pending|generating|done|failed
  generatedAt DateTime?
  error       String?

  // Optional fields for metadata
  review          String?
  finalText       String?
  responseType    String?
  outcome         String?
  multiplication  Int?
  difficulty      String?
  ageCategory     String?
  gender          String?
  author          String?
  wildcard        String?

  // Questions under this leaf
  questions Question[] @relation("SsscQuestions")
}

// Add source enum for questions
enum QuestionSource {
  ai
  user
  import
}

// Track per-user question status
model UserQuestion {
  id         String   @id @default(cuid())
  userId     String
  questionId String
  status     String   @default("answered") // answered|skipped|hidden
  createdAt  DateTime @default(now())
  updatedAt  DateTime @updatedAt

  user     User     @relation(fields: [userId], references: [id])
  question Question @relation(fields: [questionId], references: [id])

  @@unique([userId, questionId])
}

// Add Group and UserGroup models
model Group {
  id      String     @id @default(cuid())
  name    String     @unique
  members UserGroup[]
}

model UserGroup {
  id      String   @id @default(cuid())
  userId  String
  groupId String

  user    User     @relation(fields: [userId], references: [id])
  group   Group    @relation(fields: [groupId], references: [id])

  @@unique([userId, groupId])
  @@index([groupId])
}

// Wallet for user balances
model Wallet {
  id            String        @id @default(cuid())
  userId        String        @unique
  tenantId      String
  user          User          @relation(fields: [userId], references: [id])
  funds         Decimal       @default(0)
  diamonds      Int           @default(0)
  ledgerEntries LedgerEntry[]
  @@index([tenantId])
  @@unique([userId, tenantId])
}

enum Currency {
  FUNDS
  DIAMONDS
}

enum LedgerKind {
  CREDIT
  DEBIT
}

model LedgerEntry {
  id        String      @id @default(cuid())
  walletId  String
  tenantId  String
  wallet    Wallet      @relation(fields: [walletId], references: [id])
  kind      LedgerKind
  amount    Int         // positive or negative
  currency  Currency    // FUNDS or DIAMONDS
  refType   String      // e.g., "purchase", "admin_adjustment", "subscription_drip"
  refId     String?
  note      String?
  createdAt DateTime    @default(now())
  @@index([tenantId])
  @@index([walletId, createdAt])
}

model Product {
  id           String            @id @default(cuid())
  slug         String            @unique
  title        String
  description  String?
  kind         ProductKind
  payload      Json
  stackable    Boolean           @default(false) // whether entitlements can stack
  active       Boolean           @default(true)
  prices       Price[]
  entitlements Entitlement[]
  purchases    Purchase[]
  avatarEquip      UserProfile[] @relation("avatarEquip")
  backgroundEquip  UserProfile[] @relation("backgroundEquip")
  skinEquip        UserProfile[] @relation("skinEquip")
  createdAt    DateTime          @default(now())
}

enum ProductKind {
  CURRENCY_PACK
  COSMETIC
}

model Price {
  id            String    @id @default(cuid())
  productId     String
  product       Product   @relation(fields: [productId], references: [id])
  stripePriceId String?
  currencyCode  String    // "USD", "EUR", etc.
  unitAmount    Int       // minor units (cents)
  active        Boolean   @default(true)

  @@index([productId])
}

model Purchase {
  id         String         @id @default(cuid())
  userId     String
  tenantId   String
  user       User           @relation(fields: [userId], references: [id])
  productId  String
  product    Product        @relation(fields: [productId], references: [id])
  quantity   Int            @default(1)
  totalMinor Int            // charged amount in minor units
  status     PurchaseStatus @default(SUCCEEDED)
  extRef     String?        // external payment/session ID
  createdAt  DateTime       @default(now())
  @@index([tenantId])
  @@index([userId, createdAt])
}

enum PurchaseStatus {
  PENDING
  SUCCEEDED
  FAILED
  REFUNDED
}

model Entitlement {
  id        String    @id @default(cuid())
  userId    String
  tenantId  String
  user      User      @relation(fields: [userId], references: [id])
  productId String
  product   Product   @relation(fields: [productId], references: [id])
  meta      Json?
  createdAt DateTime  @default(now())
  @@index([tenantId])
  @@unique([userId, productId]) // Note: This enforces uniqueness for non-stackable products
}

model Subscription {
  id               String    @id @default(cuid())
  userId           String
  user             User      @relation(fields: [userId], references: [id])
  stripeSubId      String    @unique
  plan             String
  status           String
  currentPeriodEnd DateTime
  perks            Json      // e.g., { monthlyDiamonds: 300 }
  createdAt        DateTime  @default(now())
}

// Profiles storing user equip settings
model UserProfile {
  id                   String   @id @default(cuid())
  userId               String   @unique
  user                 User     @relation(fields: [userId], references: [id])
  equippedAvatarId     String?
  equippedAvatar       Product? @relation("avatarEquip", fields: [equippedAvatarId], references: [id])
  equippedBackgroundId String?
  equippedBackground   Product? @relation("backgroundEquip", fields: [equippedBackgroundId], references: [id])
  equippedSkinId       String?
  equippedSkin         Product? @relation("skinEquip", fields: [equippedSkinId], references: [id])
  updatedAt            DateTime @updatedAt
}

model Badge {
  id          String    @id @default(cuid())
  slug        String    @unique
  title       String
  description String
  icon        String    // emoji or icon identifier
  active      Boolean   @default(true)
  createdAt   DateTime  @default(now())
  
  userBadges  UserBadge[]
}

model UserBadge {
  id        String   @id @default(cuid())
  userId    String
  badgeId   String
  createdAt DateTime @default(now())
  
  user  User  @relation(fields: [userId], references: [id], onDelete: Cascade)
  badge Badge @relation(fields: [badgeId], references: [id], onDelete: Cascade)
  
  @@unique([userId, badgeId])
}

model FailedLoginAttempt {
  id        String   @id @default(cuid())
  ipAddress String
  email     String
  createdAt DateTime @default(now())
  
  @@index([ipAddress, createdAt])
  @@index([email, createdAt])
}

model PasswordReset {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([expiresAt])
}

model EmailVerify {
  id        String   @id @default(cuid())
  userId    String
  token     String   @unique
  expiresAt DateTime
  createdAt DateTime @default(now())
  
  user User @relation(fields: [userId], references: [id], onDelete: Cascade)
  
  @@index([token])
  @@index([expiresAt])
}

model AuditLog {
  id        String   @id @default(cuid())
  userId    String?  // Optional - may be null for anonymous actions
  ip        String
  action    String
  meta      Json?    // Additional metadata as JSON
  createdAt DateTime @default(now())
  
  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)
  
  @@index([createdAt])
  @@map("audit_logs")
}





