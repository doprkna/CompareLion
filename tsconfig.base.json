{
  "compilerOptions": {
    "target": "ES2020",
    "module": "ESNext",
    "moduleResolution": "Node",
    "strict": true,
    "jsx": "preserve",
    "allowJs": false,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "baseUrl": ".",
    "paths": {
      "@parel/*": ["packages/*/src"],
      "@parel/core/utils/*": ["packages/core/utils/*"],
      "@parel/core/config": ["packages/core/config"],
      "@parel/shared": ["packages/shared"],
      "@parel/utils": ["packages/utils"],
      "@shared/*": ["packages/shared/*"],
      "@utils/*": ["packages/utils/*"]
    }
  },
  "exclude": ["node_modules", "dist", "build", ".next", ".turbo", "coverage"]
}

